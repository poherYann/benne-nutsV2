{% extends 'base.html.twig' %}

{% block title %}Hello MapboxController!{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map {
            position: absolute;
            top: 0;
            bottom: 0;
            width: 50%;
        }

        .marker {
            background-image: url('https://docs.mapbox.com/mapbox-gl-js/assets/custom_marker.png');
            background-size: cover;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
        }

        .mapboxgl-popup {
            max-width: 200px;
        }

        .mapboxgl-popup-content {
            text-align: center;
            font-family: 'Open Sans', sans-serif;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div id="map">

                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

    </div>
    <div class="container">
        <div class="col-lg-12">
            <ul>
                {{ showAllBenne }}
            </ul>
        </div>
    </div>

{% endblock %}
